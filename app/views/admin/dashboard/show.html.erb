<h1>List of Products and Categories</h1>
<p></p>

<div class="panel panel-default items">
<table class="table table-sm">
  <thead>
    <tr>
      <th colspan="2">Total Products</th>
      <th colspan="2">Total Categories</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th colspan="2"><%= @products.count %></th>
      <th colspan="2"><%= @categories.count %></th>
    </tr>
    <tr>
      <th colspan="2"><button class="btn btn-link"><%= link_to "Products" , [:admin, :products]%></button></th>
      <th colspan="2"><% Category.all.each do |category| %>
        <button class="btn btn-link"><%= link_to category.name, category%></button>
        <% end %>
        
      </th>
    </tr>
  </tbody>
</table>
</div> 

